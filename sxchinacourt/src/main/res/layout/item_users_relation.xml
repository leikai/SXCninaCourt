<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_item_relation"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"


    >

    <ImageView
        android:id="@+id/item_weidoor_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <CheckedTextView
        android:id="@+id/item_weidoor_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="法院微门户"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"

        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@+id/item_weidoor_imageview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_weidoor_imageview"
        app:layout_constraintBottom_toBottomOf="@+id/item_weidoor_imageview"
        />



</android.support.constraint.ConstraintLayout>