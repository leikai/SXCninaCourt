<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/iv_erweima_bgtop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#554d4d4d"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_erweima_bgleft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#554d4d4d"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="#ffffff"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_erwema_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="二维码"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#3a7eec"
                    />
                <ImageView
                    android:id="@+id/iv_erweima"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    />
                <Button
                    android:id="@+id/btn_erweima_next"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="下一步"
                    android:background="#3a7eec"
                    />

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_erweima_bgright"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#554d4d4d"

                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_erweima_bgbottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#554d4d4d"
            />


    </LinearLayout>


</RelativeLayout>