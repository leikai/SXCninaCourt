<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="#ffffff"
    >

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ll_view_message_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:id="@+id/tv_view_message_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="留言人:"
                android:textSize="18sp"

                />
            <TextView
                android:id="@+id/tv_message_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="留言人姓名"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_view_message_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:id="@+id/tv_view_message_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="留言类型:"
                android:textSize="18sp"

                />
            <TextView
                android:id="@+id/tv_message_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="留言类型"
                android:textSize="18sp"
                android:paddingLeft="5dp"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_view_message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:id="@+id/tv_view_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="留言时间:"
                android:textSize="18sp"

                />
            <TextView
                android:id="@+id/tv_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="留言时间"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                />
        </LinearLayout>
    </LinearLayout>




</LinearLayout>