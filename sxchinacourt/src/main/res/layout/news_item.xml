<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >
<TextView
    android:id="@+id/item_titel_news"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="title"
    android:textSize="16sp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="25dp"
    android:singleLine="false"
    android:textColor="@color/colorOverRed"
    />
    <TextView
        android:id="@+id/item_title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:text="content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:singleLine="false"
        android:layout_below="@+id/item_titel_news"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/item_title_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_ibtn_news_to"
        android:text="时间"
        android:textSize="8sp"
        android:layout_marginRight="8dp"
        />
    <ImageButton
        android:id="@+id/item_ibtn_news_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/news_btn_to"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_titel_news"
        android:layout_alignBottom="@+id/item_title_content"
        />
</RelativeLayout>